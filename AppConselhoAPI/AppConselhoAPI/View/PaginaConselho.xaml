<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppConselhoAPI.View.PaginaConselho">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="adviceEntry"/>
            <Button x:Name="BtnAdvice" Text="Buscar Conselho" Clicked="BtnAdvice_Clicked"/>

            <Label x:Name="lblSlip_Id" Text="{Binding slip_id}" TextColor="Black"/>
            <Label x:Name="lblAdvice"  Text="{Binding advice}" TextColor="Black"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>